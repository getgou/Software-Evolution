<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <com.xw.repo.BubbleSeekBar
        android:id="@+id/BSBReusedAmount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:bsb_auto_adjust_section_mark="true"
        app:bsb_bubble_color="@color/theme_primary"
        app:bsb_second_track_color="@color/theme_accent_1"
        app:bsb_max="20"
        app:bsb_show_section_mark="false"
        app:bsb_progress="1"
        app:bsb_section_count="20"
        app:bsb_show_section_text="false"
        app:bsb_show_thumb_text="true"
        app:bsb_thumb_text_size="20sp"
        app:bsb_touch_to_seek="true"/>


</LinearLayout>

